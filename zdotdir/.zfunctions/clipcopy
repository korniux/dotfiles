#!/usr/bin/env zsh

# Check for OS and required clipboard utility
if [[ "$(uname -s)" == "Darwin" ]]; then
    # macOS: pbcopy is built-in
    pbcopy "$@"
elif command -v xclip &> /dev/null; then
    # Linux: Use xclip (defaulting to the selection buffer 'c' / clipboard)
    xclip -selection c "$@"
elif command -v xsel &> /dev/null; then
    # Linux: Use xsel alternative
    xsel --clipboard --input "$@"
else
    echo "Error: Cannot copy. Install 'xclip' or 'xsel'." >&2
    return 1
fi
